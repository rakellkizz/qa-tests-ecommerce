{
  "name": "tests-integration",
  "version": "1.0.0",
  "description": "Integration tests with Node.js + Express + Supertest + Jest (JUnit ready).",
  "type": "commonjs",
  "scripts": {
    "dev": "node src/server.js",
    "test": "jest -c jest.config.js --runInBand --reporters=default --reporters=jest-junit",
    "test:watch": "jest -c jest.config.js --watch",
    "test:coverage": "jest -c jest.config.js --coverage --reporters=default --reporters=jest-junit"
  },
  "devDependencies": {
    "express": "^4.19.2",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "supertest": "^7.0.0"
  }
}
