{
  "name": "qa-tests-ecommerce",
  "version": "1.0.0",
  "description": "Automação E2E/API de e-commerce com Cypress",
  "private": true,
  "scripts": {
    "serve": "http-server ./local_site -p 8080 -a 0.0.0.0",
    "e2e": "cypress run --config baseUrl=http://127.0.0.1:8080,retries=2,video=true",
    "e2e:junit": "cypress run --reporter mocha-junit-reporter --reporter-options \"mochaFile=results/junit-[hash].xml,testsuitesTitle=E2E-Cypress\" --config baseUrl=http://127.0.0.1:8080,retries=2,video=true",
    "allure:generate": ".\\\\node_modules\\\\.bin\\\\allure.cmd generate allure-results --clean -o allure-report",
    "allure:open": ".\\\\node_modules\\\\.bin\\\\allure.cmd open allure-report"
  },
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.34.1",
    "cypress": "^13.13.0",
    "http-server": "^14.1.1",
    "mocha-junit-reporter": "^2.2.1",
    "wait-on": "^9.0.1"
  }
}
